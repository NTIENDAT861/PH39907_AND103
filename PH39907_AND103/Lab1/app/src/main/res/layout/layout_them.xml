<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_top_setting"
        android:gravity="center"
        android:padding="12dp"
        android:text="Add Country"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_body_setting"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zip Code"
                android:textColor="#DFDFDF"
                android:textSize="13sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/zipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_setting_admin"

                android:padding="12dp"
                android:textColor="#151111"
                android:textColorHint="#4C4C4C"
                android:textSize="16sp" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name Country"
                android:textColor="#DFDFDF"
                android:textSize="13sp"
                android:layout_marginTop="10dp"

                android:textStyle="bold" />

            <EditText
                android:id="@+id/namecountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_setting_admin"

                android:padding="12dp"
                android:textColor="#151111"
                android:textColorHint="#4C4C4C"
                android:textSize="16sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:background="#BFB1B1B1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:padding="10dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/btn_03"
                android:text="Cancel"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/btn_05"
                android:text="Add"
                android:textColor="#F3F3F3"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>